<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.robby.basicfirebaseapp">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".NewsFeedActivity"></activity>
        <activity android:name=".PostActivity" />
        <activity android:name=".CreatePostActivity" />
        <activity android:name=".EditActivity" />
        <activity android:name=".FollowingActivity" />
        <activity android:name=".FollowerActivity" />
        <activity android:name=".UserActivity" />
        <activity android:name=".FindActivity" />
        <activity android:name=".FilterActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>